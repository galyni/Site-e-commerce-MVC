@model SiteMVC.Models.ViewModels.AvisViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Avis</h4>
<hr />
<h5>Produit concerné :</h5>
<div>
    <h4>@Html.DisplayFor(model => model.produit.Nom)</h4>
    <h6>Référence produit : @Html.DisplayFor(model => model.produit.Id)</h6>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.produit.PrixUnitaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.produit.PrixUnitaire) euros
        </dd>
        <dt class="col-sm-2">
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#description">
                @Html.DisplayNameFor(model => model.produit.Description)
            </button>
        </dt>
        <dd class="col-sm-10">
            <div id="description" class="collapse in">
                @Html.DisplayFor(model => model.produit.Description)
            </div>
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create" asp-route-produitId="@Model.produit.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="IdClient" value="@ViewBag.IdClient">
                <input type="hidden" asp-for="IdProduit" value="@Model.produit.Id">
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label">Note sur 10</label>
                <input asp-for="Note" type="number" min="0" max="10" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contenu" class="control-label">Votre avis :</label>
                <input asp-for="Contenu" type="text" size="500" class="form-control" />
                <span asp-validation-for="Contenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
