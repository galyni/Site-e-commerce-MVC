@model IEnumerable<SiteMVC.Produit>

@{
    ViewData["Title"] = "DeactivatedList";
}

<h1>DeactivatedList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixUnitaire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hauteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longueur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Largeur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poids)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategorieNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCouleurNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFabricantNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFournisseurNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixUnitaire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hauteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longueur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Largeur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategorieNavigation.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCouleurNavigation.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFabricantNavigation.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFournisseurNavigation.Nom)
            </td>
            <td>
                <a asp-action="Reactivate" asp-route-id="@item.Id">Réactiver le produit</a>
            </td>
        </tr>
}
    </tbody>
</table>
